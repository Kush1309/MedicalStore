{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "js/**",
            "use": "@vercel/static"
        },
        {
            "src": "styles/**",
            "use": "@vercel/static"
        },
        {
            "src": "images/**",
            "use": "@vercel/static"
        },
        {
            "src": "uploads/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.js"
        },
        {
            "source": "/secure-admin-login",
            "destination": "/backend/server.js"
        },
        {
            "source": "/admin",
            "destination": "/backend/server.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/uploads/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/$1"
        }
    ]
}